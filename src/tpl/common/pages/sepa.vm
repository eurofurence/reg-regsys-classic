#if($page.Language == "de-DE")
<td class="contentbox">
    <div class="pageheader">&Uuml;berweisungsinformationen</div>
    <hr class="contentbox">

    #parse( "errorlisting.vm" )

    #if($page.mayView())##
        <div class="headline">Zahlung per SEPA Bank&uuml;berweisung</div>
